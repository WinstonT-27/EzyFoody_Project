<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodMenu"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="EzyFoody: Food"
            android:textColor="#000"
            android:textSize="12pt" />
    </RelativeLayout>

    <Button
        android:id="@+id/buttonMyOrder2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="viewMyOrder"
        android:text="My Order" />

    <GridLayout
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:layout_width="140dp"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Nasi Putih\nRp. 300"
            android:id="@+id/buttonNasiPutih"
            />
        <Button
            android:layout_width="140dp"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Nasi Kuning\nRp. 350"
            android:id="@+id/buttonNasiKuning"
            />
        <Button
            android:layout_width="140dp"
            android:layout_column="1"
            android:layout_row="2"
            android:text="Burger\nRp. 350"
            android:id="@+id/buttonBurger"
            />
        <Button
            android:layout_width="140dp"
            android:layout_column="2"
            android:layout_row="2"
            android:text="Hot Dog\nRp. 350"
            android:id="@+id/buttonHotDog"
            />
    </GridLayout>

    <Button
        android:layout_marginTop="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBackToMain"
        android:text="Back"
        android:layout_gravity="right"
        />

</LinearLayout>